<% include ../partials/header %>

<div style="text-align:center">
        <h1>Add New Comment to <%= podcast.name %> </h1>
    </div>
    
        <div class="container">
            <div class="row"></div>
                <div style="width:30%; margin: 0 auto;">
                        <form action='/podcasts/<%= podcast._id %>/comments' method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="comment[text]" placeholder="text">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="comment[author]"placeholder="author">
                        </div>
                        <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                        </div>
                </form>
                <a href="/podcasts">Go Back</a>
                </div>
            </div>
        </div>
    
<% include ../partials/footer %>